<%- include("../layout/admin/navbar") -%>

    <div class="manage-student-edit">
        <div class="container">
            <form action="/admin/manage-subject-edit/<%= subject.id%>?_method=PUT" method="post">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">اسم المادة الدراسية</th>
                            <th scope="col">الصف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="text" name="name" value="<%= subject.name%>"></td>
                            <td><select name="_class" id="">
                                    <option selected>
                                        <%= subject._class%>
                                    </option>
                                    <% _class.forEach(data=> { %>
                                        <option>
                                            <%= data.name%>
                                        </option>
                                        <% }); %>
                                </select></td>
                        </tr>
                    </tbody>
                </table>

                <button type="submit" class="btn btn-success">تاكيد التعديل</button>
            </form>
        </div>
    </div>
    <%- include("../layout/admin/footer") -%>